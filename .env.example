# ECHO Multi-Agent System Environment Configuration
# Copy this file to .env and configure the values as needed
# All ECHO-specific variables use the ECHO_ prefix

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application name (default: "ECHO Multi-Agent System")
ECHO_APP_NAME="ECHO Multi-Agent System"

# Enable debug mode for development (default: false)
ECHO_DEBUG=false

# ============================================================================
# LLM PROVIDER CONFIGURATION
# ============================================================================

# Default LLM provider to use (options: openai, anthropic, google)
ECHO_DEFAULT_LLM_PROVIDER=openai

# API keys for LLM providers (at least one is required)
ECHO_OPENAI_API_KEY=your_openai_api_key_here
ECHO_ANTHROPIC_API_KEY=your_anthropic_api_key_here
ECHO_GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# PLUGIN SYSTEM CONFIGURATION
# ============================================================================

# Plugin directory path (default: "./src/echo-plugins")
ECHO_PLUGINS_DIR=./src/echo-plugins

# Enable Git-based plugins (default: true)
ECHO_ENABLE_GIT_PLUGINS=true

# Enable plugin validation (default: true)
ECHO_ENABLE_PLUGIN_VALIDATION=true

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================

# API server host (default: "0.0.0.0")
ECHO_API_HOST=0.0.0.0

# API server port (default: 8000, range: 1-65535)
ECHO_API_PORT=8000

# CORS allowed origins (default: ["*"])
# For multiple origins, use comma-separated values: "http://localhost:3000,http://localhost:3001"
ECHO_CORS_ORIGINS=*

# ============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# ============================================================================

# Redis connection URL for state persistence (optional)
# Examples:
# - Redis without auth: redis://localhost:6379
# - Redis with auth: redis://:password@localhost:6379
# - Redis with database: redis://localhost:6379/1
# - Redis with SSL: rediss://localhost:6380
ECHO_REDIS_URL=redis://localhost:6379

# ============================================================================
# SESSION MANAGEMENT
# ============================================================================

# Session timeout in seconds (default: 3600, minimum: 60)
ECHO_SESSION_TIMEOUT=3600

# Maximum session history length (default: 100, minimum: 1)
ECHO_MAX_SESSION_HISTORY=100

# ============================================================================
# SYSTEM LIMITS
# ============================================================================

# Maximum processing hops to prevent infinite loops (default: 10, range: 1-50)
ECHO_MAX_HOPS=10

# ============================================================================
# PLUGIN-SPECIFIC ENVIRONMENT VARIABLES
# ============================================================================

# Template Plugin API Key (example for plugin-specific variables)
# Each plugin may require its own environment variables
TEMPLATE_API_KEY=your_template_plugin_api_key_here

# Add additional plugin-specific environment variables here as needed
# PLUGIN_NAME_API_KEY=your_plugin_api_key
# PLUGIN_NAME_CONFIG_VALUE=your_config_value

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Uncomment and set these for development environments

# Override default log level
# LOG_LEVEL=DEBUG

# Development database URL (if different from production)
# DEV_REDIS_URL=redis://localhost:6379/0

# Development-specific API keys for testing
# DEV_OPENAI_API_KEY=your_dev_openai_key
# DEV_ANTHROPIC_API_KEY=your_dev_anthropic_key

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Uncomment and configure these for production deployments

# Production Redis URL with authentication
# ECHO_REDIS_URL=redis://:your_redis_password@your_redis_host:6379

# Production CORS origins (specific domains only)
# ECHO_CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Production API host (may be different for containerized deployments)
# ECHO_API_HOST=0.0.0.0

# Security: Disable debug mode in production
# ECHO_DEBUG=false
